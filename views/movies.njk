{% extends "layout.njk" %}

{% block content %}
<main class="container">
    <h1>{{title}}</h1>
    <p>{{message}}</p>
    <p>{{name}}</p>
    <h1>Posts</h1>
    <ul>
    {% for item in movies %}
    <li>{{ item.title }}</li>
    <li>{{ item.director }}</li>
    <li>{{ item.year }}</li>
    <li>{{ item.genre }}</li>

    {% else %}
    <li>This would display if the 'item' collection were empty</li>
    {% endfor %}
    </ul>
</main>

{% endblock %}